---
import Layout from "../layouts/Layout.astro";
---

<Layout title="StudyBuddies">
  <div class="container mt-3">
    <div class="row mt-5">
      <div class="col-md-6 offset-md-3">
        <div class="text-center">
          <img src="/image.png" class="img-fluid rounded mx-auto d-block" alt="Image" />
          <p class="mt-3 fs-4 fw-bold">Find study groups easily and quickly with StudyBuddies</p>
          <p class="mt-3 fs-5">Sign up to get started, or log in if you have an account!</p>
          <div class="row">
            <a href="/signin" class="btn btn-primary rounded-3 ms-4 mt-2 btn-lg">Sign In</a>
            <a href="/register" class="btn btn-outline-secondary rounded-3 ms-4 mt-2 btn-lg">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
