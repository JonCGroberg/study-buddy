---
import Layout from "../layouts/Layout.astro";
---

<Layout title="StudyBuddies">
  <div class="container mt-3">
    <div class="row mt-5 p-0 m-0">
      <div class="col-md-6 mx-auto">
        <div class="text-center pt-5 mt-5">
          <img src="/image.png" class="img-fluid rounded mx-auto d-block" alt="Image" />
          <p class="mt-3 mx-auto  text-center  fw-bold fs-4">Find study groups easily and quickly with StudyBuddies</p>
          <p class="mt-3 mx-auto text-cente  fs-4">Sign up to get started, or log in if you have an account!</p>
          <div class="row p-0 m-0 w-100 ">
            <a href="/signin" class="btn btn-primary rounded-3 mt-3 btn-lg">Sign In</a>
            <a href="/register" class="btn btn-outline-secondary rounded-3 mt-3 btn-lg">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
